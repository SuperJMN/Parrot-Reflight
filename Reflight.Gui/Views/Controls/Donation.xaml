<UserControl
    x:Class="Reflight.Gui.Views.Controls.Donation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Reflight.Gui.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <RichTextBlock>
            <Paragraph>
                <Run>This application is proudly developed by José Manuel Nieto (JMN) for the Parrot Community</Run>
                <Run>Please, support my work donating any amount using the Donate below.</Run>
            </Paragraph>
            <Paragraph FontWeight="Bold" Margin="0 10">
                Thank you very much!
            </Paragraph>
        </RichTextBlock>

        <Button Grid.Row="1" controls:DockPanel.Dock="Bottom" VerticalAlignment="Center" HorizontalAlignment="Center" Content="PayPal donate" Tapped="DonateOnTap" />
        
    </Grid>
</UserControl>
